{
  "name": "hardhat-security",
  "version": "1.0.0",
  "description": "This is a Hardhat project with various security-focused scripts and tools. It includes dependencies such as Hardhat plugins, OpenZeppelin contracts, Chai for testing, and more.",
  "scripts": {
    "slither": "slither ./contracts --filter-paths node_modules --solc-remaps @=node_modules/@ --exclude naming-convention,external-function,low-level-calls",
    "toolbox": "docker run -it --rm -v %cd%:/src trailofbits/eth-security-toolbox",
    "lint": "solhint 'contracts/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.8.3",
    "@openzeppelin/hardhat-upgrades": "^1.25.3",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.14.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-deploy": "^0.11.29",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.2"
  }
}
